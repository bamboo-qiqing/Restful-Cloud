<idea-plugin>
    <id>com.bamboo.bamboo-tool</id>
    <name>bamboo-tool</name>
    <vendor email="760560079@qq.com" url="http://baidu.com">bamboo</vendor>

    <description><![CDATA[
        Restful Fast Request is a powerful restful api toolkit plugin(http client)
        ]]>
    </description>

    <!-- 插件版本号 -->
    <version>1.0</version>
    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceImplementation="com.bamboo.tool.config.BambooToolComponent" order="first"/>
        <applicationService serviceImplementation="com.bamboo.tool.db.service.ApiProjectService"/>
        <applicationService serviceImplementation="com.bamboo.tool.db.service.ApiMethodService"/>
        <applicationService serviceImplementation="com.bamboo.tool.db.service.AnnotationInfoService"/>
        <applicationService serviceImplementation="com.bamboo.tool.db.service.AnnotationMethodScopeService"/>
        <applicationService serviceImplementation="com.bamboo.tool.db.service.AnnotationParamService"/>
        <applicationService serviceImplementation="com.bamboo.tool.db.service.FrameworkService"/>


        <toolWindow id="tool api" anchor="right" factoryClass="com.bamboo.tool.config.BambooToolWindowFactory"
                    secondary="false"/>
        <!--兼容性处理code-->
        <notificationGroup id="toolWindowNotificationGroup" displayType="TOOL_WINDOW"/>

        <searchEverywhereContributor
                implementation="com.bamboo.tool.components.api.contributor.FastRequestGotoContributor$Factory"/>
        <searchEverywhereResultsEqualityProvider
                implementation="com.bamboo.tool.components.api.contributor.FastRequestEqualityProvider"/>
<!--        <applicationConfigurable id="p" displayName="Bamboo Tool">-->
<!--            <configurable parentId="p"-->
<!--                          instance="com.bamboo.tool.components.api.configurable.AnnotationsConfigurable"/>-->
<!--        </applicationConfigurable>-->

    </extensions>
    <extensions defaultExtensionNs="com.intellij.searchEverywhereContributor">

    </extensions>

    <extensionPoints>
        <extensionPoint name="requestMappingContributor" interface="com.intellij.navigation.ChooseByNameContributor"
                        dynamic="true"/>
    </extensionPoints>
    <extensions defaultExtensionNs="com.bamboo.bamboo-tool">
        <requestMappingContributor
                implementation="com.bamboo.tool.components.api.contributor.RequestMappingByNameContributor"/>

    </extensions>

    <projectListeners>
        <listener class="com.bamboo.tool.listeners.ToolProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>

</idea-plugin>

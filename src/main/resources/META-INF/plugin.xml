<idea-plugin>
    <id>com.bamboo.bamboo-tool</id>
    <name>bamboo-tool</name>
    <vendor email="760560079@qq.com" url="http://baidu.com">bamboo</vendor>

    <description><![CDATA[
    Restful Fast Request is a powerful restful api toolkit plugin(http client)
    ]]>
    </description>

    <!-- 插件版本号 -->
    <version>1.0</version>
    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceImplementation="com.bamboo.tool.config.BambooToolComponent" order="first"/>
        <applicationService serviceImplementation="com.bamboo.tool.db.service.ApiProjectService"/>
        <applicationService serviceImplementation="com.bamboo.tool.db.service.ApiMethodService"/>

        <toolWindow id="tool api" anchor="right" factoryClass="com.bamboo.tool.config.BambooToolWindowFactory"
                    secondary="false"/>
        <!--兼容性处理code-->
        <notificationGroup id="toolWindowNotificationGroup" displayType="TOOL_WINDOW"/>

<!--        <searchEverywhereContributor-->
<!--                implementation="com.bamboo.tool.components.api.view.action.FastRequestGotoContributor$Factory"/>-->

    </extensions>
   <actions>
       <action id="bambooApi.goToBambooApiRequest"
               class="com.bamboo.tool.components.api.view.action.GotoRequestAction">
           <keyboard-shortcut first-keystroke="alt F" keymap="$default"/>
       </action>
   </actions>
    <projectListeners>
        <listener class="com.bamboo.tool.listeners.ToolProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>

<idea-plugin>
    <id>com.bamboo.bamboo-tool</id>
    <name>bamboo-tool</name>
    <vendor email="760560079@qq.com" url="http://baidu.com">bamboo</vendor>

    <description>111</description>
    <!-- 插件版本号 -->
    <version>1.0</version>
    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.java</depends>
    <depends>com.intellij.spring</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceImplementation="com.bamboo.tool.config.BambooToolComponent" order="first"/>
        <projectService  serviceImplementation="com.bamboo.tool.components.api.frameworkType.impl.SpringFrameworkImpl"/>
        <projectService serviceImplementation="com.bamboo.tool.components.api.frameworkType.impl.JaxFrameworkImpl"/>

    </extensions>

    <projectListeners>
        <listener class="com.bamboo.tool.listeners.ToolProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>

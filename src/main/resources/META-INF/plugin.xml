<idea-plugin>
    <id>com.bamboo</id>
    <name>Restful Cloud</name>
    <vendor email="760560079@qq.com" url="http://liangkezaoshu.space/index.php/6.html">Restful Cloud</vendor>

    <description><![CDATA[
        Restful Cloud是一个强大的restful api工具包插件 (http客户端)，致力于restful api多个项目的管理。
        该插件产生的是由于微服务的普遍化，平时开发时不得不搜索所有的项目，以及不同项目之间SOA接口调用，插件缓存了已经打开过项目的所有restful api接口。
        在打开一个项目的时候，可以搜索到所有已经打开过的项目的restful api。
        ]]>
    </description>

    <!-- 插件版本号 -->
    <version>1.0</version>
    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationService serviceImplementation="com.bamboo.tool.config.BambooToolComponent" order="first"/>
        <projectService serviceImplementation="com.bamboo.tool.components.api.configurable.BambooApiFilterConfiguration"
                        order="first"/>
        <toolWindow id="Restful Cloud" anchor="right" factoryClass="com.bamboo.tool.config.BambooToolWindowFactory"
                    secondary="false"  icon="PluginIcons.LOGO" />
        <!--兼容性处理code-->
        <notificationGroup id="toolWindowNotificationGroup" displayType="TOOL_WINDOW"/>

        <searchEverywhereContributor
                implementation="com.bamboo.tool.components.api.contributor.BambooApiGotoContributor$Factory"/>
        <searchEverywhereResultsEqualityProvider
                implementation="com.bamboo.tool.components.api.contributor.BambooApiEqualityProvider"/>
        <applicationConfigurable dynamic="true" displayName="Restful Cloud"
                                 instance="com.bamboo.tool.components.api.configurable.RestfulCloudConfigurable"/>
    </extensions>
    <extensions defaultExtensionNs="com.intellij.searchEverywhereContributor">

    </extensions>

    <extensionPoints>
        <extensionPoint name="requestMappingContributor" interface="com.intellij.navigation.ChooseByNameContributor"
                        dynamic="true"/>
    </extensionPoints>
    <extensions defaultExtensionNs="com.bamboo">
        <requestMappingContributor
                implementation="com.bamboo.tool.components.api.contributor.RequestMappingByNameContributor"/>

    </extensions>


    <projectListeners>
        <listener class="com.bamboo.tool.listeners.ToolProjectManagerListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>

</idea-plugin>
